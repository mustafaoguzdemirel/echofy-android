<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF6F61"/>
            <corners android:radius="32dp"/>
            <stroke android:width="2dp" android:color="#FF9988"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FF6F61"/>
            <corners android:radius="32dp"/>
        </shape>
    </item>
</selector>
